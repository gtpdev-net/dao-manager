@model IEnumerable<DAO.Manager.Models.Dependency>

@{
    ViewData["Title"] = "Dependencies";
    var scan = ViewBag.Scan as DAO.Manager.Models.Scan;
}

<h1>Project Dependencies</h1>
<p class="text-muted">Scan from: @scan?.ScanDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Source Type</th>
            <th>Source</th>
            <th></th>
            <th>Target Type</th>
            <th>Target</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><span class="badge bg-info">@item.SourceType</span></td>
                <td>
                    @if (item.SourceSolution != null)
                    {
                        <text>@item.SourceSolution.Name</text>
                    }
                    else if (item.SourceProject != null)
                    {
                        <text>@item.SourceProject.Name</text>
                    }
                </td>
                <td><i class="bi bi-arrow-right"></i> â†’</td>
                <td><span class="badge bg-success">@item.TargetType</span></td>
                <td>@item.TargetProject.Name</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Details" asp-route-id="@scan?.Id" class="btn btn-secondary">Back to Scan Details</a>
    <a asp-action="AssemblyDependencies" asp-route-id="@scan?.Id" class="btn btn-primary">View Assembly Dependencies</a>
    <a asp-action="Index" class="btn btn-secondary">Back to Scans</a>
</div>
