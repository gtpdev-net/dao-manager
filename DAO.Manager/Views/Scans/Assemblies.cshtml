@model IEnumerable<DAO.Manager.Models.Assembly>

@{
    ViewData["Title"] = "Assemblies";
    var scan = ViewBag.Scan as DAO.Manager.Models.Scan;
}

<h1>Assemblies</h1>
<p class="text-muted">Scan from: @scan?.ScanDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Assembly File Name</th>
            <th>Output Type</th>
            <th>Target Framework</th>
            <th>Project Style</th>
            <th>Project Path</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><code>@item.AssemblyFileName</code></td>
                <td>@item.OutputType</td>
                <td>@item.TargetFramework</td>
                <td>@item.ProjectStyle</td>
                <td><small>@item.ProjectFilePath</small></td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Details" asp-route-id="@scan?.Id" class="btn btn-secondary">Back to Scan Details</a>
    <a asp-action="AssemblyDependencies" asp-route-id="@scan?.Id" class="btn btn-primary">View Assembly Dependencies</a>
    <a asp-action="Index" class="btn btn-secondary">Back to Scans</a>
</div>
