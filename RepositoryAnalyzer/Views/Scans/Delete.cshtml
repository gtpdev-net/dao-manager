@model RepositoryAnalyzer.Models.Scan

@{
    ViewData["Title"] = "Delete Scan";
}

<h1>Delete Scan</h1>

<div class="alert alert-warning">
    <h3>Are you sure you want to delete this scan?</h3>
    <p>This action cannot be undone. All data related to this scan will be permanently deleted.</p>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Scan Date</dt>
            <dd class="col-sm-9">@Model.ScanDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</dd>

            <dt class="col-sm-3">Repository Path</dt>
            <dd class="col-sm-9">@Model.RepositoryPath</dd>

            <dt class="col-sm-3">Git Commit Hash</dt>
            <dd class="col-sm-9"><code>@Model.GitCommitHash</code></dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
