@model IEnumerable<RepositoryAnalyzer.Models.Solution>

@{
    ViewData["Title"] = "Solutions";
    var scan = ViewBag.Scan as RepositoryAnalyzer.Models.Scan;
}

<h1>Solutions</h1>
<p class="text-muted">Scan from: @scan?.ScanDate.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>File Path</th>
            <th>Visual Studio GUID</th>
            <th>GUID Method</th>
            <th>Projects</th>
            <th>Single Project</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td><small>@item.FilePath</small></td>
                <td><code>@item.VisualStudioGuid</code></td>
                <td>@item.GuidDeterminationMethod</td>
                <td>@item.NumberOfReferencedProjects</td>
                <td>@(item.IsSingleProjectSolution ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Details" asp-route-id="@scan?.Id" class="btn btn-secondary">Back to Scan Details</a>
    <a asp-action="Index" class="btn btn-secondary">Back to Scans</a>
</div>
